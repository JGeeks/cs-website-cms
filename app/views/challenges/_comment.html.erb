<div class="comment clearfix <%= "reply" if comment.reply? %>" id="<%= comment.id %>">
  <div class="profile-picture">
    <%= image_tag comment.member.profile_pic %>
  </div>
  <div class="main">
    <div class="text"> <%= raw(comment.comment) %> </div>
    <div class="info">
      <span class="name"><%= comment.member.name %></span>,
      <span class="time"><%= comment.createddate.strftime("%b %d, %Y at %H:%M %p") %></span>
      <% unless comment.reply? %>
        <%= link_to "reply", challenge_path(challenge, reply_to: comment.id, anchor: "new-comment-form") %>
      <% end %>
    </div>
  </div>
</div>
