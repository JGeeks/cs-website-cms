<div class="content-wrapper">
    <div class="container">

      <div>
          <div class="title"><h1>RESEND UNLOCK INSTRUCTIONS</h1></div>

          <%= simple_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
            <%= f.error_notification %>

            <div class="inputs">
              <%= f.input :email, :required => true %>
            </div>

            <div class="inputs">
              <%= f.input :username, :required => true %>
            </div>

            <div class="actions">
              <%= f.button :submit, "Resend" %>
            </div>
          <% end %>

					<div style="padding-bottom: 50px"></div>

          <a href="/users/confirmation/new">Didn&#x27;t receive confirmation instructions?</a><br />
          <a href="/users/unlock/new">Didn&#x27;t receive unlock instructions?</a><br />    

      </div>

    </div> <!-- /.container -->
</div><!-- /.loginbar-wrapper -->
