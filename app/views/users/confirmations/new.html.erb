<div class="content-wrapper">
    <div class="container">

      <div>
          <div class="title"><h1>RESEND CONFIRMATION INSTRUCTIONS</h1></div>

          <%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>

            <div class="inputs">
              <%= f.input :email, :required => true %>
            </div>

            <div class="actions">
              <%= f.button :submit, "Resend" %>
            </div>
          <% end %>

          <div style="padding-bottom: 50px"></div> 

          <a href="/users/confirmation/new">Didn&#x27;t receive confirmation instructions?</a><br />
          <!-- add unlock instructions link -->  

      </div>

    </div> <!-- /.container -->
</div><!-- /.loginbar-wrapper -->